{
  "extends": ["web-recommended"],
  "formatters": ["stylish"],
  "connector": {
    "name": "local",
    "options": { "pattern": ["**/*.html","**/*.css","**/*.js"] }
  },
  "hintsTimeout": 120000,
  "hints": {
    "axe/accessibility": "error",
    "html-checker": "error",
    "no-missing-alt-text": "error",
    "meta-charset-utf-8": "error",
    "meta-viewport": "error"
  }
}
